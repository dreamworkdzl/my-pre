<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title><%= title%></title>
		<link rel="stylesheet" type="text/css" href="/stylesheets/login.css"/>
		<script type="text/javascript" src="/javascripts/jquery-1.11.3.js" ></script>
		<script type="text/javascript" src="/javascripts/login.js" ></script>
	</head>
	<body>
		<div class="login_body">
			<div class="big_logo">
				<img src="/images/shopex.png">
			</div>
			<div class="center_form">
				<div class="logo">
					<img src="/images/ecshop-logo.png" />
				</div>
				<div class="login_zone">
					<div class="login_module">
						<!--input-->
						<div class="inputs">
							<div class="msg">
								<span></span>
								<input type="text" id="username" placeholder="用户名">
							</div>
							<div class="msg">
								<span class="icon_2"></span>
								<input type="password" id="psw" placeholder="密码">
							</div>
							<div class="msg last">
								<span class="icon_3"></span>
								<input type="text" id="id-code" placeholder="验证码">
								<div id="new-code"></div>
							</div>
						</div>
						<!--button-->
						<div class="button">
							<input type="submit" value="登录" id="btn"/>
						</div>
						<!--check and controls-->
						<div class="controls">
							<p><input type="checkbox" checked="checked"/>保存登录信息<a href="#">忘记密码?</a><a href="#" class="go-index">去店铺首页>></a></p>
						</div>
					</div>
				</div>
			</div>
		</div>
	</body>
</html>
